<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="@color/colorText"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_hot_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:text="@string/hot_video"
        />
    <Button
        android:id="@+id/btn_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:text="@string/stock"
        />
    <Button
        android:id="@+id/btn_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:text="@string/reader_machine"
        />
    <Button
        android:id="@+id/btn_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:text="@string/fast_news"
        />
    <Button
        android:id="@+id/btn_graduate_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graduate_design"
        android:textColor="@color/colorText"
        />


</LinearLayout>
